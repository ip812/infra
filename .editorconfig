root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true


[*.{tf,tfvars}]
# https://github.com/hashicorp/hcl/issues/111
indent_style = space
indent_size = 2

[*.{md,txt}]
max_line_length = 0
trim_trailing_whitespace = false

[Makefile]
indent_style = tab
